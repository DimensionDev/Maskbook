      "@masknet/plugin-rss3": ["./packages/plugins/RSS3/src/index.ts"],
      "@masknet/plugin-template": ["./packages/plugins/template/src/index.ts"],
      "@masknet/plugin-cyberconnect": ["./packages/plugins/CyberConnect/src/index.ts"],
