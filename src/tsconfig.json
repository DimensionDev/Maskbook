{
  "extends": "../tsconfig.json",
  "include": ["./**/*", "./**/*.json"],
  "compilerOptions": {
    "outDir": "../temp/esm/",
    "declaration": true,
    "noEmit": false,
    // project composition
    "composite": true,
    // ! Once you change the plugin config, you have to bump the version of tsBuildInfoFile to clear cache
    "tsBuildInfoFile": "../temp/esm/tsconfig.esm.tsbuildinfo.v1",
    // plugins
    "plugins": [
      {
        "transform": "@magic-works/ttypescript-browser-like-import-transformer",
        "after": true,
        "importHelpers": "/polyfills/ttsclib.js",
        "jsonImport": "inline",
        "folderImport": true,
        "rules": {
          "/(.+)/": {
            "type": "umd",
            "target": "$1",
            "globalObject": "__deps__"
          }
        }
      }
      // Debug use this:
      // {
      //   "transform": "./scripts/gulp/tree-shake-loader.ts",
      //   "import": "transform"
      // }
    ]
  }
}
