{
    "parser": "@typescript-eslint/parser",
    "root": true,
    "parserOptions": {
        "ecmaVersion": 7,
        "sourceType": "module",
        "project": "./tsconfig.eslint.json"
    },
    "extends": ["plugin:import/typescript"],
    "plugins": ["@typescript-eslint", "unused-imports", "lodash", "import", "react-hooks", "react"],
    "rules": {
        "import/no-deprecated": "warn",
        "no-restricted-imports": [
            "error",
            { "paths": [{ "name": "lodash", "message": "Please use lodash-es instead." }] }
        ],
        "react-hooks/exhaustive-deps": "off",
        "react-hooks/rules-of-hooks": "error",
        "lodash/import-scope": ["error", "member"],
        "unused-imports/no-unused-imports-ts": "warn",
        "@typescript-eslint/await-thenable": "error",
        "@typescript-eslint/no-for-in-array": "error",
        "react/jsx-curly-brace-presence": [
            "warn",
            {
                "props": "never",
                "children": "never"
            }
        ],
        "react/self-closing-comp": [
            "warn",
            {
                "component": true,
                "html": true
            }
        ],
        "@typescript-eslint/ban-types": [
            "error",
            {
                "types": {
                    "bigint": "BigInt not supported until Safari 15.",
                    "BigInt": "BigInt not supported until Safari 15."
                },
                "extendDefaults": false
            }
        ],
        "no-restricted-syntax": [
            "error",
            {
                "selector": "Literal[raw=/n$/]",
                "message": "BigInt not supported until Safari 15."
            }
        ]
    }
}
